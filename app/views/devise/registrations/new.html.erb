<section class="w-full h-screen flex flex-col justify-center items-center bg-gray-200">
  <div class="bg-gray-50 py-3 px-10 shadow-lg rounded-md">
    <h2 class="text-center mb-3">Sign up</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="flex items-start flex-col mb-3">
        <%= f.label :name, class:"sr-only" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"w-full border border-gray-300 rounded-md outline-none focus:ring-0 focus:border focus:border-gray-300 placeholder:text-gray-300 placeholder:font-mono", placeholder: "Your name" %>
      </div>
    
      <div class="flex items-start flex-col mb-3">
        <%= f.label :image, class:"sr-only" %>
        <%= f.file_field :image, direct_upload: true, class:"w-full border border-gray-300 rounded-md outline-none focus:ring-0 focus:border focus:border-gray-300 placeholder:text-gray-300 placeholder:font-mono" %>
      </div>
    
      <div class="flex items-start flex-col mb-3">
        <%= f.label :email, class:"sr-only" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full border border-gray-300 rounded-md outline-none focus:ring-0 focus:border focus:border-gray-300 placeholder:text-gray-300 placeholder:font-mono", placeholder: "email@example.com" %>
      </div>
    
      <div class="flex items-start flex-col mb-3">
        <%= f.label :password, class:"sr-only" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class:"w-full border border-gray-300 rounded-md outline-none focus:ring-0 focus:border focus:border-gray-300 placeholder:text-gray-300 placeholder:font-mono", placeholder: "******" %>
      </div>
    
      <div class="flex items-start flex-col mb-3">
        <%= f.label :password_confirmation, class:"sr-only" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full border border-gray-300 rounded-md outline-none focus:ring-0 focus:border focus:border-gray-300 placeholder:text-gray-300 placeholder:font-mono", placeholder: "******" %>
      </div>
    
      <div class="grid mb-3">
        <%= f.submit "Sign up", class:"bg-blue-500 text-white font-mono py-2 px-4 rounded outline-none hover:bg-blue-700" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</section>
