<section class="w-full h-screen flex flex-col justify-center items-center bg-gray-200">
  <div class="bg-gray-50 py-3 px-10 shadow-lg rounded-md">
    <h2 class="text-center">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class:"sr-only" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com", class:"border border-gray-300 rounded-md outline-none focus:ring-0 focus:border focus:border-gray-300 placeholder:text-gray-300 placeholder:font-mono" %>
      </div>
    
      <div class="mb-3">
        <%= f.label :password, class:"sr-only" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"******", class:"border border-gray-300 rounded-md outline-none focus:ring-0 focus:border focus:border-gray-300 placeholder:text-gray-300 placeholder:font-mono" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="mb-3 flex items-center gap-x-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="grid mb-3">
        <%= f.submit "Log in", class:"bg-blue-500 text-white font-mono py-2 px-4 rounded outline-none hover:bg-blue-700" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</section>
